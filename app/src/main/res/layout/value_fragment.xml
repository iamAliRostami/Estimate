<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:paddingLeft="@dimen/activity_mid_padding"
    android:paddingRight="@dimen/activity_mid_padding"
    tools:context="com.leon.estimate.fragments.ValueFragment">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/activity_large_margin"
        android:text="@string/arzesh_mantaghe"
        android:textColor="@color/blue4"
        android:textSize="@dimen/textSizeHuge"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginBottom="@dimen/activity_mid_margin"
        android:background="@drawable/border_gray_1"
        android:fillViewport="true"
        android:padding="@dimen/activity_mid_padding"
        tools:ignore="UnusedAttribute,UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_mid_margin"
                        android:gravity="center"
                        android:paddingTop="@dimen/activity_medium_padding"
                        android:paddingBottom="@dimen/activity_medium_padding"
                        android:text="@string/block"
                        android:textSize="@dimen/textSizeLarge" />

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_mid_margin"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/activity_medium_padding"
                        android:paddingBottom="@dimen/activity_medium_padding"
                        android:spinnerMode="dialog"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_mid_margin"
                        android:gravity="center"
                        android:paddingTop="@dimen/activity_medium_padding"
                        android:paddingBottom="@dimen/activity_medium_padding"
                        android:text="@string/gozar"
                        android:textSize="@dimen/textSizeLarge" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_mid_margin"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/activity_medium_padding"
                        android:paddingBottom="@dimen/activity_medium_padding"
                        android:spinnerMode="dialog"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_medium_padding"
                    android:paddingBottom="@dimen/activity_medium_padding"
                    android:text="@string/maskooni" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_medium_padding"
                    android:paddingBottom="@dimen/activity_medium_padding"
                    android:text="@string/tejari" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_medium_padding"
                    android:paddingBottom="@dimen/activity_medium_padding"
                    android:text="@string/edari_dolati" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_medium_padding"
                    android:paddingBottom="@dimen/activity_medium_padding"
                    android:text="@string/omoumi" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_medium_padding"
                    android:paddingBottom="@dimen/activity_medium_padding"
                    android:text="@string/sanati" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_medium_padding"
                    android:paddingBottom="@dimen/activity_medium_padding"
                    android:text="@string/hotel" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText
                    android:id="@+id/editText_maskooni"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray_1"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:paddingTop="@dimen/activity_medium_padding"
                    android:paddingBottom="@dimen/activity_medium_padding"
                    android:text="@string/zero"
                    tools:ignore="Autofill,LabelFor" />

                <EditText
                    android:id="@+id/editText_tejari"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray_1"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:paddingTop="@dimen/activity_medium_padding"
                    android:paddingBottom="@dimen/activity_medium_padding"
                    android:text="@string/zero"
                    tools:ignore="Autofill,LabelFor" />

                <EditText
                    android:id="@+id/editText_edari"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray_1"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:paddingTop="@dimen/activity_medium_padding"
                    android:paddingBottom="@dimen/activity_medium_padding"
                    android:text="@string/zero"
                    tools:ignore="Autofill,LabelFor" />

                <EditText
                    android:id="@+id/editText_omumi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray_1"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:paddingTop="@dimen/activity_medium_padding"
                    android:paddingBottom="@dimen/activity_medium_padding"
                    android:text="@string/zero"
                    tools:ignore="Autofill,LabelFor" />

                <EditText
                    android:id="@+id/editText_sanati"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray_1"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:paddingTop="@dimen/activity_medium_padding"
                    android:paddingBottom="@dimen/activity_medium_padding"
                    android:text="@string/zero"
                    tools:ignore="Autofill,LabelFor" />

                <EditText
                    android:id="@+id/editText_hotel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray_1"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:paddingTop="@dimen/activity_medium_padding"
                    android:paddingBottom="@dimen/activity_medium_padding"
                    android:text="@string/zero"
                    tools:ignore="Autofill,LabelFor" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollView"
        android:layout_marginLeft="@dimen/activity_large_margin"
        android:layout_marginRight="@dimen/activity_large_margin"
        android:layout_toRightOf="@+id/button_counting"
        android:gravity="center"
        android:padding="@dimen/activity_medium_padding"
        android:textSize="@dimen/textSizeLarge"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/button_counting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollView"
        android:layout_alignParentLeft="true"
        android:background="@drawable/border_green_2"
        android:paddingLeft="@dimen/activity_medium_padding"
        android:paddingRight="@dimen/activity_medium_padding"
        android:text="@string/counting"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeLarge"
        tools:ignore="RtlHardcoded" />
</RelativeLayout>