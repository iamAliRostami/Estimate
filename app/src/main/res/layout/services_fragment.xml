<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context="com.leon.estimate.fragments.ServicesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_mid_margin"
        android:layout_marginRight="@dimen/activity_mid_margin"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_large_margin"
            android:gravity="center"
            android:text="@string/services"
            android:textColor="@color/blue4"
            android:textSize="@dimen/textSizeHuge"
            android:textStyle="bold" />

        <GridView
            android:background="@drawable/border_gray_2"
            android:id="@+id/gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:numColumns="2"
            tools:ignore="NestedScrolling,ScrollViewSize,UnusedAttribute"
            tools:listitem="@layout/item_check_box" />

    </LinearLayout>
</RelativeLayout>
