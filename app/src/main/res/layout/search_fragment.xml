<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    tools:context="com.leon.estimate.fragments.SearchFragment">

    <LinearLayout
        android:id="@+id/linearLayoutForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_medium_padding"
        android:paddingRight="@dimen/activity_medium_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_mid_padding"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_mid_margin"
                android:layout_marginBottom="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/bill_id"
                android:textColor="@color/blue4"
                android:textSize="@dimen/textSizeLarge"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/editTextBillId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:background="@drawable/border_gray_1"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:paddingTop="@dimen/activity_medium_padding"
                android:paddingBottom="@dimen/activity_medium_padding"
                android:singleLine="true"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_mid_margin"
                android:layout_marginBottom="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/shomare_peygiri"
                android:textColor="@color/blue4"
                android:textSize="@dimen/textSizeLarge"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/editTextTrackNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:background="@drawable/border_gray_1"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:paddingTop="@dimen/activity_medium_padding"
                android:paddingBottom="@dimen/activity_medium_padding"
                android:singleLine="true"
                tools:ignore="Autofill,LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_mid_padding"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_mid_margin"
                android:layout_marginBottom="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/name"
                android:textColor="@color/blue4"
                android:textSize="@dimen/textSizeLarge"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:background="@drawable/border_gray_1"
                android:gravity="center"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:paddingTop="@dimen/activity_medium_padding"
                android:paddingBottom="@dimen/activity_medium_padding"
                android:singleLine="true"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_mid_margin"
                android:layout_marginBottom="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/family"
                android:textColor="@color/blue4"
                android:textSize="@dimen/textSizeLarge"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/editTextFamily"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:background="@drawable/border_gray_1"
                android:gravity="center"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:paddingTop="@dimen/activity_medium_padding"
                android:paddingBottom="@dimen/activity_medium_padding"
                android:singleLine="true"
                tools:ignore="Autofill,LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_mid_padding"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_mid_margin"
                android:layout_marginBottom="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/nation_number"
                android:textColor="@color/blue4"
                android:textSize="@dimen/textSizeLarge"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/editTextNationNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:background="@drawable/border_gray_1"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:paddingTop="@dimen/activity_medium_padding"
                android:paddingBottom="@dimen/activity_medium_padding"
                android:singleLine="true"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_mid_margin"
                android:layout_marginBottom="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/mobile_number"
                android:textColor="@color/blue4"
                android:textSize="@dimen/textSizeLarge"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/editTextMobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:background="@drawable/border_gray_1"
                android:gravity="center"
                android:inputType="phone"
                android:lines="1"
                android:maxLines="1"
                android:paddingTop="@dimen/activity_medium_padding"
                android:paddingBottom="@dimen/activity_medium_padding"
                android:singleLine="true"
                tools:ignore="Autofill,LabelFor" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutForm"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/activity_mid_padding"
        android:background="@drawable/border_green_2"
        android:paddingLeft="@dimen/activity_medium_padding"
        android:paddingRight="@dimen/activity_medium_padding"
        android:text="@string/search"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeLarge"
        tools:ignore="ObsoleteLayoutParam,RelativeOverlap,RtlHardcoded" />

