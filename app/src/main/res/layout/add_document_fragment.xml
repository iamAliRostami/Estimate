<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    tools:context=".fragments.AddDocumentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_mid_margin"
        android:background="@drawable/border_gray_2"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_mid_margin"
                android:layout_marginBottom="@dimen/activity_mid_margin"
                android:layout_weight="0.75"
                android:gravity="left"
                android:text="@string/name"
                android:textColor="@color/blue4"
                android:textSize="@dimen/textSizeLarge"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/editTextName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_mid_margin"
                android:layout_weight="2"
                android:background="@drawable/border_white_1"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:paddingTop="@dimen/activity_medium_padding"
                android:paddingBottom="@dimen/activity_medium_padding"
                android:singleLine="true"
                android:textSize="@dimen/textSizeMedium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_mid_margin"
                android:layout_marginBottom="@dimen/activity_mid_margin"
                android:layout_weight="1.25"
                android:gravity="left"
                android:text="@string/family"
                android:textColor="@color/blue4"
                android:textSize="@dimen/textSizeLarge"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/editTextFamily"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_mid_margin"
                android:layout_weight="2"
                android:background="@drawable/border_white_1"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:paddingTop="@dimen/activity_medium_padding"
                android:paddingBottom="@dimen/activity_medium_padding"
                android:singleLine="true"
                android:textSize="@dimen/textSizeMedium"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_mid_margin"
                android:layout_marginBottom="@dimen/activity_mid_margin"
                android:layout_weight="0.75"
                android:gravity="left"
                android:text="@string/address"
                android:textColor="@color/blue4"
                android:textSize="@dimen/textSizeLarge"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/editTextAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_mid_margin"
                android:layout_weight="5.25"
                android:background="@drawable/border_white_1"
                android:gravity="right|top"
                android:lines="3"
                android:paddingTop="@dimen/activity_medium_padding"
                android:paddingBottom="@dimen/activity_medium_padding"
                android:singleLine="true"
                android:textSize="@dimen/textSizeMedium"
                android:textStyle="bold"
                tools:ignore="Autofill,Deprecated,LabelFor,RtlHardcoded" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_mid_margin"
                android:layout_marginBottom="@dimen/activity_mid_margin"
                android:layout_weight="1.25"
                android:gravity="left"
                android:text="@string/shomare_peygiri"
                android:textColor="@color/blue4"
                android:textSize="@dimen/textSizeLarge"
                tools:ignore="NestedWeights,RtlHardcoded" />

            <TextView
                android:id="@+id/editTextTrackNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_mid_margin"
                android:layout_weight="2"
                android:background="@drawable/border_white_1"
                android:gravity="center"
                android:lines="1"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingTop="@dimen/activity_medium_padding"
                android:paddingBottom="@dimen/activity_medium_padding"
                android:singleLine="true"
                android:textSize="@dimen/textSizeMedium"
                android:textStyle="bold"
                tools:ignore="Autofill,LabelFor" />

            <Button
                android:id="@+id/buttonSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_mid_padding"
                android:layout_weight="0.75"
                android:background="@drawable/border_green_2"
                android:paddingLeft="@dimen/activity_medium_padding"
                android:paddingRight="@dimen/activity_medium_padding"
                android:text="@string/add_document"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeLarge" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>